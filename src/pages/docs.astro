  <!-- Quick Navigation -->
  <div class="mb-12 grid gap-3 sm:grid-cols-2 lg:grid-cols-4">
    <a href="#about" class="bento-card group p-4 hover:border-warm-gold/50 transition-colors">
      <div class="flex items-center gap-3">
        <div class="flex size-10 items-center justify-center rounded-lg bg-warm-gold/10">
          <Icon name="lucide:sparkles" class="text-warm-gold size-5" />
        </div>
        <div>
          <div class="font-mono text-sm font-medium text-foreground group-hover:text-warm-gold transition-colors">About</div>
          <div class="font-mono text-xs text-muted-foreground">Project Overview</div>
