        <div class="flex size-10 items-center justify-center rounded-lg bg-cyan-glow/10">
          <Icon name="lucide:target" class="text-cyan-glow size-5" />
        </div>
        <div>
          <div class="font-mono text-sm font-medium text-foreground group-hover:text-cyan-glow transition-colors">Vision</div>
          <div class="font-mono text-xs text-muted-foreground">Roadmap & Goals</div>
